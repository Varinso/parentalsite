<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>


<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.pa.client.controllers.HomeController" prefWidth="1300" prefHeight="900"
            styleClass="home-root">

  <top>
    <VBox spacing="0">
      <HBox alignment="CENTER_LEFT" spacing="12" styleClass="top-strip">

        <Pane HBox.hgrow="ALWAYS"/>

        <Separator orientation="VERTICAL"/>
        <Button text="(219) 555-0114" styleClass="phone-btn" onAction="#onCall"/>
        <Button text="User" styleClass="user-btn" onAction="#onUserMenu"/>
      </HBox>

      <HBox alignment="CENTER_LEFT" spacing="18" styleClass="navbar">
      <StackPane prefHeight="80" maxWidth="200" styleClass="illustration">
        <ImageView fx:id="loginLogo" fitHeight="60" preserveRatio="true" smooth="true" pickOnBounds="true">
                  <image>
                      <!-- Load from classpath -->
                      <Image url="@/images/logo.png"/>
                  </image>
              </ImageView>
          </StackPane>

        <Button text="Home" styleClass="nav-btn" onAction="#goHome"/>

        <MenuButton text="Social Features" styleClass="nav-menu">
          <items>
            <MenuItem text="Posts &amp; Comments" onAction="#goFeed"/>
            <MenuItem text="Chat" onAction="#goChat"/>
          </items>
        </MenuButton>

        <Button text="Professional Help" styleClass="nav-btn" onAction="#goExperts"/>

        <MenuButton text="Learning Resources" styleClass="nav-menu">
          <items>
            <MenuItem text="Pre-Parent" onAction="#goPreParent"/>
            <MenuItem text="Age 0–5" onAction="#go0to5"/>
            <MenuItem text="Age 6–12" onAction="#go6to12"/>
            <MenuItem text="Teenager" onAction="#goTeen"/>
          </items>
        </MenuButton>

        <MenuButton text="Special Children Support" styleClass="nav-menu">
          <items>
            <MenuItem text="Search Schools" onAction="#goSpecialSupport"/>
            <MenuItem text="Search Private Teachers" onAction="#goTeachers"/>
              <MenuItem fx:id="menuRegisterTeacher" text="Register as a Teacher" onAction="#goRegisterTeacher"/>
          </items>
        </MenuButton>

        <Button text="Health Sessions" styleClass="nav-btn" onAction="#goSessions"/>
        <Pane HBox.hgrow="ALWAYS"/>
      </HBox>
    </VBox>
  </top>

    <center>
        <ScrollPane fitToWidth="true" fitToHeight="false"
                    pannable="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED"
                    style="-fx-background-color:transparent;">
            <content>
                <VBox spacing="40" alignment="TOP_CENTER">

                    <!-- ===== Hero section ===== -->
                    <GridPane styleClass="hero" prefHeight="420" hgap="0" vgap="0">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="48"/>
                            <ColumnConstraints percentWidth="52"/>
                        </columnConstraints>

                        <!-- Left: text -->
                        <VBox GridPane.columnIndex="0" spacing="10" alignment="CENTER_LEFT" styleClass="hero-left">
                            <Label text="Learning Today For A Better Tomorrow" styleClass="hero-title"/>
                            <Label text="Guidance, community, and resources to help every child thrive."
                                   wrapText="true" maxWidth="520" styleClass="hero-sub"/>
                        </VBox>

                        <!-- Right: image -->
                        <StackPane GridPane.columnIndex="1" alignment="CENTER_RIGHT" styleClass="hero-right">
                            <ImageView fx:id="heroImage"
                                       preserveRatio="true"
                                       pickOnBounds="true"
                                       fitHeight="420"/>
                        </StackPane>
                    </GridPane>

                    <!-- ===== Section header ===== -->
                    <VBox spacing="12" alignment="CENTER">
                        <Label text="WHAT WE OFFER" styleClass="overline"/>
                        <Label text="Discover Our Programs" styleClass="section-title"/>
                    </VBox>

                    <!-- ===== Feature cards ===== -->
                    <FlowPane hgap="18" vgap="18" prefWrapLength="1120" alignment="CENTER">
                        <StackPane styleClass="feature-card">
                            <VBox spacing="6">
                                <Label text="I" styleClass="roman"/>
                                <Label text="Social Features" styleClass="feature-title"/>
                                <Label text="Ask questions, post updates, and connect with other parents in real time."
                                       wrapText="true" styleClass="feature-desc"/>
                                <HBox spacing="8"><Hyperlink text="Open" onAction="#goFeed"/></HBox>
                            </VBox>
                        </StackPane>

                        <StackPane styleClass="feature-card">
                            <VBox spacing="6">
                                <Label text="II" styleClass="roman"/>
                                <Label text="Professional Help" styleClass="feature-title"/>
                                <Label text="Find doctors, consultants, and therapists for online sessions."
                                       wrapText="true" styleClass="feature-desc"/>
                                <HBox spacing="8"><Hyperlink text="Explore experts" onAction="#goExperts"/></HBox>
                            </VBox>
                        </StackPane>

                        <StackPane styleClass="feature-card">
                            <VBox spacing="6">
                                <Label text="III" styleClass="roman"/>
                                <Label text="Learning Resources" styleClass="feature-title"/>
                                <Label text="Age-wise video courses from pre-parent to teenagers."
                                       wrapText="true" styleClass="feature-desc"/>
                                <HBox spacing="8"><Hyperlink text="Browse videos" onAction="#goPreParent"/></HBox>
                            </VBox>
                        </StackPane>

                        <StackPane styleClass="feature-card">
                            <VBox spacing="6">
                                <Label text="IV" styleClass="roman"/>
                                <Label text="Special Children Support" styleClass="feature-title"/>
                                <Label text="Search experts, schools, or private teachers for special needs."
                                       wrapText="true" styleClass="feature-desc"/>
                                <HBox spacing="8"><Hyperlink text="Start search" onAction="#goSpecialSupport"/></HBox>
                            </VBox>
                        </StackPane>

                        <StackPane styleClass="feature-card">
                            <VBox spacing="6">
                                <Label text="V" styleClass="roman"/>
                                <Label text="Health Sessions" styleClass="feature-title"/>
                                <Label text="Check upcoming health camps every 6 months and register."
                                       wrapText="true" styleClass="feature-desc"/>
                                <HBox spacing="8"><Hyperlink text="View camps" onAction="#goSessions"/></HBox>
                            </VBox>
                        </StackPane>
                    </FlowPane>

                    <Region prefHeight="32"/>
                </VBox>
            </content>
        </ScrollPane>
    </center>


    <bottom>
    <HBox alignment="CENTER" styleClass="footer">
      <Label text="© perentalassist"/>
    </HBox>
  </bottom>
</BorderPane>
