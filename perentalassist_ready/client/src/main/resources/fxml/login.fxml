<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.pa.client.controllers.LoginController" prefWidth="440" prefHeight="560"
            styleClass="auth-root login-page">

    <top>
        <VBox spacing="12" alignment="CENTER" BorderPane.alignment="CENTER" styleClass="login-header">
            <padding><Insets top="30" bottom="20"/></padding>
            <Label text="Parental Assist" styleClass="brand-title" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2563eb;"/>
            <Label text="Welcome back" styleClass="welcome-text" style="-fx-font-size: 16px; -fx-text-fill: #4b5563;"/>
        </VBox>
    </top>

    <center>
        <VBox spacing="20" alignment="CENTER" maxWidth="320" styleClass="login-form">
            <padding><Insets left="30" right="30"/></padding>
            <!-- Logo goes here -->
            <StackPane prefHeight="100" maxWidth="240" styleClass="login-illustration">
                <ImageView fx:id="loginLogo" fitHeight="80" preserveRatio="true" smooth="true" pickOnBounds="true">
                    <image>
                        <!-- Load from classpath -->
                        <Image url="@/images/logo.png"/>
                    </image>
                </ImageView>
            </StackPane>

            <VBox spacing="16" styleClass="input-group">
                <TextField fx:id="emailField" promptText="Email" maxWidth="320" styleClass="login-input"/>
                <PasswordField fx:id="passwordField" promptText="Password" maxWidth="320" styleClass="login-input"/>
            </VBox>

            <HBox spacing="10" alignment="CENTER_RIGHT" maxWidth="320">
                <Hyperlink text="Forgot password?" onAction="#onForgot" style="-fx-text-fill: #4b5563;"/>
            </HBox>

            <Button text="Sign in" onAction="#onLogin" maxWidth="320" styleClass="login-btn" style="-fx-font-size: 15px; -fx-background-color: #2563eb; -fx-text-fill: white; -fx-background-radius: 6;"/>

            <HBox spacing="6" alignment="CENTER" styleClass="signup-prompt">
                <padding><Insets top="10"/></padding>
                <Label text="New here?" style="-fx-text-fill: #4b5563;"/>
                <Hyperlink text="Create an account" onAction="#goSignup" style="-fx-text-fill: #2563eb; -fx-underline: false;"/>
            </HBox>
        </VBox>
    </center>

    <bottom>
        <VBox alignment="CENTER" spacing="4" styleClass="login-footer">
            <padding><Insets bottom="20"/></padding>
            <Label text="Â© perentalassist" BorderPane.alignment="CENTER" style="-fx-text-fill: #6b7280;" />
        </VBox>
    </bottom>
</BorderPane>
